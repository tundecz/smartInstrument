<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false"
            >
            <gradient
                android:startColor="#008375"
                android:endColor="#008375"
                />
            <corners
                android:radius="15dp"/>
            <size
                android:width="25dp"
                android:height="25dp"/>
        </shape>
    </item>
    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false"
            >
            <gradient
                android:startColor="#ececec"
                android:endColor="#ececec"
                />
            <corners
                android:radius="15dp"/>
            <size
                android:width="25dp"
                android:height="25dp"/>
        </shape>
    </item>
</selector>